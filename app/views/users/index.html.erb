<h1>Users Display</h1>
<%= search_form_for @q, remote: true do |f| %>
  <%= f.label :email_cont, 'Search byEmail' %>
  <%= f.search_field :email_cont %>
  <%= f.submit %>
<% end %>
<table>
<thead>
    <tr>
      <th>email</th>
      <th>role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.email %></td>
        <td><%= u.role.name %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

