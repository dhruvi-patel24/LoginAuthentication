<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<table>
<thead>
<th>Title</th>
<th>Content</th>
</thead>
<tbody>
    <% @posts.each do |u|%>
      <tr>
        <td><%= u.title%></td>
        <td><%= u.content%></td>
        <td><%= link_to "Destroy", post_path(u), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
      </tr>
    
    <% end %>
  </tbody>
</table>

<%= link_to "New Post", new_post_path %>